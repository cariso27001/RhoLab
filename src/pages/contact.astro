---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}

  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to support!"
    items={[
      {
        title: 'General support',
        description: `Chat with us for inquiries related to lab affairs, courses, research, joining the lab or general questions about the website's functionality.`,
      },
      {
        title: 'Cooperation',
        description:
          'Chat with us for questions about projects, fundings, licensing for commercial use, etc.',
      },
      {
        title: 'Technical support',
        description:
          'Chat with us when facing issues like server downtime, problems with computing platform, issues with instruments, or other technical challenges related to experiments.',
      },
      {
        title: 'Phone',
        description: 'Office: +886 (02) 3366-4871 </br> Department: +886 (02) 3366-4869',
        icon: 'flat-color-icons:phone',
      },
      {
        title: 'Email',
        description: 'Professor: veggierho@ntu.edu.tw </br> Department: hort@ntu.edu.tw',
        icon: 'flat-color-icons:invite',
      },
      {
        title: 'Location',
        description: 'Rm. 215, Bldg. 4, No. 1, Sec. 4, Roosevelt Rd., Taipei 10617, Taiwan (R.O.C.)',
        icon: 'flat-color-icons:shop',
      },
    ]}
  />
</Layout>
