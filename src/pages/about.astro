---
// import Features2 from '~/components/widgets/Features2.astro';
// import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
// import Stats from '~/components/widgets/Stats.astro';
// import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Lab"
    image={{
      src: '~/assets/images/about/HeroImage.jpg',
      alt: 'About Hero Image',
    }}
  >
    <Fragment slot="title">
      Professor Tony Rho & Student's Lab <br />
    </Fragment>

    <Fragment slot="subtitle">
      The goal of the Lab is to go carefully and deeply through each research done using the most accurate information, performing high quality experiments.
    </Fragment>
  </Hero>



<!-- Content Widget ************** -->

  <Content
    title = 'Where are we?'
    tagline="Find us"
    items={[
      {
        title: 'Main address',
        icon: 'tabler:building-estate',
        description:
          'Bldg. 4, No. 1, Sec. 4, Roosevelt Rd., Taipei 10617, Taiwan',
      },
      {
        title: 'Office',
        icon: 'tabler:coffee',
        description:
          'Room 215, 2F',
      },
      {
        title: 'Laboratory',
        icon: 'tabler:flask-2',
        description:
          'Room 225-1, 2F',
      },
    ]}

  >
    <Fragment slot="image">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3615.506547043613!2d121.5351718752867!3d25.01687807782753!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442aa274d788985%3A0xac2aa9924f3c58be!2zMTA25Y-w5YyX5biC5aSn5a6J5Y2A5Zub6Jmf6aSo!5e0!3m2!1szh-TW!2stw!4v1719600029346!5m2!1szh-TW!2stw" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </Fragment>
  </Content>

  

</Layout>
